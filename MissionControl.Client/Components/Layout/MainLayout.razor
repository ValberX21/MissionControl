@inherits LayoutComponentBase
@implements IDisposable
@inject MissionControl.Services.LoginState LoginState
@inject NavigationManager Navigation
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage

<PageTitle>5-JogoFrontEndWeb</PageTitle>

<div class="page">
    @if (LoginState.IsLoggedIn && !IsLoginPage)
    {
        <div class="sidebar">
            <NavMenu />
        </div>
    }

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private bool loginChecked = false;

    private bool IsLoginPage =>
        Navigation.Uri.EndsWith("/") || Navigation.Uri.EndsWith("/index");

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !loginChecked)
        {
            loginChecked = true;
            await LoginState.RestoreFromLocalStorageAsync(LocalStorage);
            StateHasChanged();
        }
    }

    protected override void OnInitialized()
    {
        LoginState.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        LoginState.OnChange -= StateHasChanged;
    }

}
